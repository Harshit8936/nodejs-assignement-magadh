<%- include('../layout/header') %>

    <div class="container">
        <div class="row">
            <div id="pgMsg"></div>
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h3 class="text-light">Add new Book</h3>
                    </div>
                    <div class="card-body p-4">
                        <form method="post" onsubmit="addNewBook(event)">
                            <div class="form-group mb-3">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    placeholder="Enter Title" autocomplete="off" maxlength="50" required >
                            </div>
                            <div class="form-group mb-3">
                                <label for="authors">Authors</label>
                                <select class="form-select" aria-label="Default select example" id="authors" name="authors">
                                    <option selected>Select Authors</option>
                                    <% for(var a=0; a < authors.length; a++) { %>
                                     <option value="<%= authors[a]._id %>"><%= authors[a].name %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label for="description">Description</label>
                                <input type="text" class="form-control" id="description" name="description"
                                    placeholder="Enter Description" autocomplete="off">
                            </div>
                            <div class="form-group mb-3">
                                <label for="price">Price</label>
                                <input type="text" class="form-control" id="price" name="price"
                                    placeholder="Enter Price" autocomplete="off" maxlength="3">
                            </div>
                            <div class="form-group mb-3 d-grid">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <%- include('../layout/footer') %>