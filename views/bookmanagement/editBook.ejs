<%- include('../layout/header') %>

    <div class="container">
        <div class="row">
            <div id="pgMsg"></div>
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h3 class="text-light">Update (<%=book.title %>)</h3>
                    </div>
                    <div class="card-body p-4">
                        <form method="post" onsubmit="updateBook(event)">
                            <div class="form-group mb-3">
                                <label for="description">Description</label>
                                <input type="text" class="form-control" id="description" name="description"
                                    placeholder="Enter Description" value="<%= book.description %>" autocomplete="off" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="price">Price</label>
                                <input type="text" class="form-control" id="price" name="price"
                                    placeholder="Enter Price" value="<%= book.price %>" autocomplete="off" maxlength="3" required>
                            </div>
                            <input type="hidden" name="old_id" value="<%= book._id %>">
                            <div class="form-group mb-3 d-grid">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <%- include('../layout/footer') %>