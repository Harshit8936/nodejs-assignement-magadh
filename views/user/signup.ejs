<%- include('../layout/header') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div id="pgMsg"></div>
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h3 class="text-light">Sign Up User</h3>
                    </div>
                    <div class="card-body p-4">
                        <form method="post" onsubmit="handleSignup(event)">
                            <div class="form-group mb-3">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" name="name"
                                    placeholder="Enter Name" autocomplete="off" required maxlength="15">
                            </div>
                            <div class="form-group mb-3">
                                <label for="role">User Role</label>
                                <select class="form-select" aria-label="Default select example" name="role" id="role">
                                    <option selected>Select User Role</option>
                                    <option value="author">Author</option>
                                    <option value="retailer">Retailer</option>
                                  </select>
                            </div>
                            <div class="form-group mb-3">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email"
                                    placeholder="Enter Email" autocomplete="off" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Enter password" autocomplete="off" required maxlength="10">
                            </div>
                            <div class="form-group mb-3 d-grid">
                                <button type="submit" class="btn btn-primary" value="Add User">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../layout/footer') %>